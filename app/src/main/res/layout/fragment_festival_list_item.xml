<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    style="@style/MyCardViewStyle"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="@dimen/festival_card_image_width"
            android:layout_height="@dimen/festival_card_image_height"
            android:background="@drawable/side_nav_bar"
            android:scaleType="centerInside"
            app:srcCompat="@drawable/festival_mysteryland" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="@dimen/festival_card_textview_horizontal_margin"
            android:layout_marginEnd="@dimen/festival_card_textview_horizontal_margin"
            android:layout_marginBottom="@dimen/festival_card_textview_vertical_margin"
            android:orientation="vertical">

            <TextView
                android:id="@+id/name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Mysteryland"
                android:textAppearance="@style/TextAppearance.AppCompat.Medium"
                android:textColor="@color/colorAccent" />

            <TextView
                android:id="@+id/date"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="26 - 27 Aug 2017" />

            <TextView
                android:id="@+id/place"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                tools:text="Netherlands, Haarlemmermeer" />

        </LinearLayout>

    </LinearLayout>

</android.support.v7.widget.CardView>
